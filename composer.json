{
    "name": "rhumsaa/twig-codeblock",
    "homepage": "https://github.com/ramsey/rhumsaa-twig-codeblock",
    "description": "A Twig extension for defining blocks of code for syntax highlighting and more.",
    "keywords": ["twig", "extension", "syntax", "highlighting", "pygments", "pygmentize"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Ramsey",
            "email": "ben@benramsey.com",
            "homepage": "http://benramsey.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "twig/twig": "~1.15",
        "kzykhys/pygments": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4",
        "squizlabs/php_codesniffer": "~2.2",
        "jakub-onderka/php-parallel-lint": "0.8.*",
        "satooshi/php-coveralls": "0.6.*"
    },
    "autoload": {
        "psr-4": {
            "Rhumsaa\\Twig\\CodeBlock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rhumsaa\\Tests\\Twig\\CodeBlock\\": "tests/"
        }
    }
}
