{
    "name": "ramsey/twig-codeblock",
    "description": "A Twig extension for defining blocks of code for syntax highlighting (with Pygments) and more.",
    "type": "library",
    "keywords": ["twig", "extension", "syntax", "highlighting", "pygments", "pygmentize"],
    "homepage": "https://github.com/ramsey/twig-codeblock",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Ramsey",
            "email": "ben@benramsey.com",
            "homepage": "http://benramsey.com"
        }
    ],
    "support": {
        "issues": "https://github.com/ramsey/twig-codeblock/issues",
        "source": "https://github.com/ramsey/twig-codeblock"
    },
    "require": {
        "php": ">=5.4.0",
        "twig/twig": "^1.15",
        "kzykhys/pygments": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7|^5.0",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "satooshi/php-coveralls": "^1.0",
        "squizlabs/php_codesniffer": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "Ramsey\\Twig\\CodeBlock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ramsey\\Tests\\Twig\\CodeBlock\\": "tests/"
        }
    }
}
